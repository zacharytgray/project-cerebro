# Cerebro (server)
PORT=3030
DB_PATH=./cerebro.db
LOG_LEVEL=info
TZ=America/Chicago

# OpenClaw Gateway
OPENCLAW_GATEWAY_URL=ws://127.0.0.1:18789
OPENCLAW_TOKEN=YOUR_OPENCLAW_GATEWAY_TOKEN

# Discord
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN

# Optional: Calendar integration (gog CLI)
# If omitted, planning/report prompts will still run, but schedule scripts will fail.
GOG_ACCOUNT=you@example.com
CEREBRO_CALENDAR_IDS=primary,YOUR_CALENDAR_ID_2
CEREBRO_CALENDAR_NAMES=Primary,Classes
CEREBRO_TIMEZONE=America/Chicago

# Optional: enable legacy backend-managed recurring reseeds (not recommended)
CEREBRO_MANAGE_SYSTEM_RECURRING=false
